# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# 4 space indentation
[*.{py,java,r,R}]
indent_style = space
indent_size = 4

[*.{md,Rmd,rst,markdown}]
trim_trailing_whitespace = false
